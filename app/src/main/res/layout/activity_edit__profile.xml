<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Activity.Edit_Profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linerlyaout"
        android:layout_height="match_parent"
        tools:ignore="NotSibling">
        <TextView
            android:id="@+id/welcome"

            android:layout_width="wrap_content"
            android:text="@string/update_pro"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:transitionName="textview"
            android:layout_marginLeft="10dp">

        </TextView>
        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginLeft="20sp"
            android:background="@color/blue" />
        <TextView
            android:id="@+id/getstart"

            android:layout_width="wrap_content"
            android:text="@string/update"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/text_color"
            android:layout_marginLeft='20sp'
            android:layout_marginTop='20sp'
            android:layout_marginRight='20sp'
            android:layout_marginBottom='10sp'
            android:layout_marginStart="10dp"
            android:transitionName="textview">

        </TextView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shapeType="pressed">

            <EditText

        android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_background"
                android:backgroundTint="@color/black"
                android:drawablePadding="10sp"
                android:gravity="center"
                android:hint="@string/name"
                android:inputType="text"
                android:padding="14dp"
                android:paddingEnd="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textCursorDrawable="@drawable/curser" />


        </soup.neumorphism.NeumorphCardView>


        <TextView
            android:layout_marginTop="@dimen/space20"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="@string/School_Name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <!-- <View
             android:layout_width="110dp"
             android:layout_height="3dp"
             android:layout_marginBottom='10sp'
             android:background="@color/blue" />-->
        <soup.neumorphism.NeumorphCardView
            android:visibility="gone"
            android:id="@+id/cv_spinner_name"

            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:neumorph_shadowElevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">




            <Spinner
                android:gravity="center"
                android:id="@+id/school_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/maptype_array"
                />




        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cv_school_name"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:neumorph_shadowElevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">

            <TextView

                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:text="@string/name"
                android:id="@+id/tv_school_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>



        </soup.neumorphism.NeumorphCardView>





        <TextView
            android:layout_marginTop="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/School_type"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <soup.neumorphism.NeumorphCardView
android:visibility="gone"
            android:id="@+id/cv_spinner_stage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:neumorph_shadowElevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">




            <Spinner
                android:id="@+id/Education_stage"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/primary"
                />




        </soup.neumorphism.NeumorphCardView>















        <!--
                android:drawableLeft="@drawable/ic_plus"
                android:drawablePadding="10sp"
                android:text="@string/add_another_activity"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="23dp" />-->


        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cv_school_stage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:neumorph_shadowElevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:text="@string/name"
                android:id="@+id/tv_school_stage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>



        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphButton
            android:id="@+id/Submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/text_color"

            style="@style/Widget.Neumorph.Button"/>



    </LinearLayout>





    </ScrollView>









</LinearLayout>