<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".form">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space20"

        android:padding="10sp"
        android:background="@color/background"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop='10sp'
        android:layout_marginRight='20sp'
        android:layout_marginBottom='10sp'
        android:text="@string/does"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="21dp" />

   <!-- <View
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_marginBottom='10sp'
        android:background="@color/blue" />-->
    <soup.neumorphism.NeumorphCardView

        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:neumorph_shadowElevation="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shapeType="pressed">




        <Spinner
            android:gravity="center"
            android:id="@+id/coloredSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/maptype_array"
            />




    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView

        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:neumorph_shadowElevation="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shapeType="pressed">




        <Spinner
            android:id="@+id/primary"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/primary"
            />




    </soup.neumorphism.NeumorphCardView>


      <!--  <TextView
            android:layout_marginTop="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/search_from"
            android:textColor="@color/black"
            android:textSize="18dp" />-->

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:neumorph_shadowElevation="6dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shapeType="pressed">




            <Spinner
                android:id="@+id/location"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/location"
                />




        </soup.neumorphism.NeumorphCardView>








    <soup.neumorphism.NeumorphCardView
        android:id="@+id/on"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:neumorph_shadowElevation="6dp"
  android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.Neumorph.CardView"
        app:neumorph_shapeType="pressed">


        <EditText
            android:id="@+id/radius"
            android:layout_width="match_parent"
            android:background="@drawable/no_background"

            android:layout_height="wrap_content"
            android:drawablePadding="10sp"
            android:hint="Enter your search radius in km "
            android:inputType="number"
            android:gravity="center"
            android:backgroundTint="@color/black"
            android:padding="14dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/txt16"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textCursorDrawable="@drawable/curser"
            />





    </soup.neumorphism.NeumorphCardView>







    <soup.neumorphism.NeumorphButton
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="continue"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/text_color"

        style="@style/Widget.Neumorph.Button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop='15sp'
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/space5"
            android:layout_marginBottom='20sp'
            android:text="@string/note"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

</ScrollView>